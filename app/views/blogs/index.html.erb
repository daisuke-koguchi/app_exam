<%= flash[:notice] %>
<h1>ブログ一覧画面</h1>
<%= link_to "ブログ新規作成", new_blog_path ,class: 'btn btn-primary'%>
<table class="table">
  <thead>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>作成日時</th>
    <th>ブログ詳細</th>
    <th>ブログ編集</th>
    <td>ブログ削除</td>
  </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog|%>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.created_at%></td>
    <td><%= link_to '詳細', blog_path(blog.id), class: 'btn btn-primary' %></td>
    <td><%= link_to '編集', edit_blog_path(blog.id), class: 'btn btn-secondary' , data: {confirm: "本当に編集しますか?"}%></td>
    <td><%= link_to '削除', blog_path(blog.id), method: :delete, class: 'btn btn-danger', data: {confirm: "本当に削除しますか？"}%></td>
    <%end%>
  </tbody>
</table>