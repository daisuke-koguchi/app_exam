<!DOCTYPE html>
<html>
  <head>
    <title>ContactAppExam3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar nabvar-expand navbar-dark bg-primary">
      <span class="navbar-brand ">Face To Face </span>
      <% if logged_in? %>
      <ul class="navbar-nav">
        <li class="nav-item active"><%= link_to "プロフィール", user_path(current_user.id) ,class: 'nav-link' %></li>
        <li class="nav-item active"><%= link_to "ログアウト", session_path(current_user.id), method: :delete,class: 'nav-link' %></li>
      </ul>
      <% else %>
      <ul class="navbar-nav">
        <li class="nav-item active"><%= link_to "新規登録", new_user_path, class: 'nav-link' %></li>
        <li class="nav-item active"><%= link_to "ログイン", new_session_path, class: 'nav-link' %></li>
      </ul>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
