<%= flash[:notice] %>
<h1>ブログ一覧画面</h1>
<%= link_to "ブログ新規作成", new_blog_path ,class: 'btn btn-secondary'%>
<table class="table">
  <thead>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>作成日時</th>
    <th>ブログ詳細</th>
    <th>ブログ削除</th>
  </tr>
  </thead>
  <tbody>
    <% @blogs.each do |blog|%>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= blog.created_at%></td>
    <td><%= link_to '詳細', blog_path(blog.id)%></td>
    <td></td>
  </tr>
    <%end%>
  </tbody>
</table>