<div class="container-fluid">
  <h1>ブログの詳細</h1>
  <% notice %>
  <table class="table" >
    <tbody>
      <tr>
        <th>ブログ作成者</th>
        <td><%= @blog.user.name %></td>
      </tr>
      <tr>
        <th>ID</th>
        <td><%= @blog.id %></td>
        </tr>
      <tr>
        <th>title</th>
        <td><%= @blog.title %></td>
      </tr>
          <tr>
        <th>content</th>
        <td><%= @blog.content %></td>
      </tr>
      <tr>
        <th>作成日時</th>
        <td><%= @blog.created_at %></td>
      </tr>
      <tr>
        <th>更新日時</th>
        <td><%= @blog.updated_at%></td>
      </tr>
    </tbody>
  </table>
  <% unless @blog.user_id == current_user.id %>
    <% if @favorite.present? %>
      <%= link_to 'お気に入りを解除する',favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
    <% else %>
      <%= link_to 'お気に入りにする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary'%>
    <% end %>
  <% end %>
  <%= link_to 'ブログ一覧画面へ', blogs_path, class: 'btn btn-primary' %>
  <% if @blog.user_id == current_user.id %>
    <%= link_to 'ブログ編集画面へ', edit_blog_path, class: 'btn btn-info' %>
    <%= link_to '削除', blog_path(@blog.id), method: :delete, class: 'btn btn-danger', data: {confirm: "本当に削除しますか？"}%>
  <% end %>
</div>